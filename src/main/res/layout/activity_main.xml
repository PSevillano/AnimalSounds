<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.polsevillano.animales.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/perro"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/perro"
        android:onClick="playPerro" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gat"
        android:id="@+id/gato"
        android:layout_alignBottom="@+id/perro"
        android:layout_toEndOf="@+id/perro"
        android:layout_marginStart="49dp"
        android:onClick="playGato" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tiger"
        android:id="@+id/tigre"
        android:layout_marginStart="49dp"
        android:layout_alignTop="@+id/gato"
        android:layout_toEndOf="@+id/gato"
        android:onClick="playTigre" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/borrico"
        android:id="@+id/burro"
        android:layout_marginStart="49dp"
        android:layout_alignTop="@+id/tigre"
        android:layout_toEndOf="@+id/tigre"
        android:onClick="playBurro" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cabra"
        android:id="@+id/cabra"
        android:layout_marginStart="49dp"
        android:layout_alignTop="@+id/burro"
        android:layout_toEndOf="@+id/burro"
        android:onClick="playCabra" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mono"
        android:layout_below="@+id/tigre"
        android:layout_alignEnd="@+id/perro"
        android:layout_marginTop="37dp"
        android:id="@+id/mono"
        android:onClick="playMono" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/vaca"
        android:id="@+id/cabra"
        android:layout_marginStart="49dp"
        android:layout_alignTop="@+id/mono"
        android:layout_toEndOf="@+id/mono"
        android:onClick="playVaca" />

</RelativeLayout>
